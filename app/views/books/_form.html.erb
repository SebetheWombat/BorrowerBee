<%= form_for @book do |f| %>
	<% if @book.errors.any? %>
		<div class = "error_msg">
			<h3>
				<%= pluralize(@book.errors.count, "error") %> prohibited saving changes
			</h3>
			<ul>
				<% @book.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<%end%>
			</ul>
		</div>
	<%end%>

	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :author %>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<%= f.submit %>


<%end%>